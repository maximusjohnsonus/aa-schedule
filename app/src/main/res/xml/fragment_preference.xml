    <PreferenceCategory
        android:title="@string/settings_general">
        <SwitchPreference
            android:key="@string/time_24_pref"
            android:title="@string/settings_24_time"
            android:defaultValue="false"/>
        <SwitchPreference
            android:key="@string/highlight_pref"
            android:title="@string/settings_highlight"
            android:defaultValue="true"/>
        <SwitchPreference
            android:key="@string/weekend_pref"
            android:title="@string/settings_weekend"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_advanced">

        <EditTextPreference
            android:key="@string/min_per_pref"
            android:title="@string/settings_min_per"
            android:defaultValue="@integer/default_min_per"
            android:inputType="number"/>

    </PreferenceCategory>


